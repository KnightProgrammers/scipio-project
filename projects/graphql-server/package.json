{
  "name": "scipio-graphql-server",
  "private": true,
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "start": "fastify start -l info dist/app.js",
    "build": "tsc -p tsconfig.json",
    "watch:ts": "tsc -w",
    "dev": "tsc -p tsconfig.json && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@fastify/autoload": "5.8.0",
    "@fastify/cors": "8.4.1",
    "@fastify/mongodb": "8.0.0",
    "@fastify/sensible": "5.5.0",
    "@fastify/type-provider-typebox": "3.5.0",
    "@immobiliarelabs/fastify-sentry": "7.1.1",
    "@knightprogrammers/scpio-db-schemas": "1.0.0",
    "@sentry/node": "7.84.0",
    "@sentry/profiling-node": "1.2.6",
    "@sinclair/typebox": "0.31.28",
    "fastify": "4.24.3",
    "fastify-cli": "5.9.0",
    "fastify-plugin": "4.5.1",
    "firebase-admin": "11.11.1",
    "gravatar": "1.8.2",
    "luxon": "3.4.4",
    "mercurius": "13.3.1",
    "mercurius-auth": "5.0.0",
    "module-alias": "2.2.3",
    "mongoose": "8.0.2"
  },
  "devDependencies": {
    "@sentry/cli": "2.22.3",
    "@types/gravatar": "1.8.6",
    "@types/luxon": "3.3.6",
    "@types/node": "20.10.2",
    "@types/tap": "15.0.11",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "concurrently": "8.2.2",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "fastify-tsconfig": "2.0.0",
    "prettier": "3.1.0",
    "tap": "18.6.1",
    "ts-node": "10.9.1",
    "typescript": "5.3.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}

{
  "name": "scipio-server",
  "private": true,
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "start": "fastify start -l info dist/app.js",
    "build": "tsc -p tsconfig.json",
    "watch:ts": "tsc -w",
    "dev": "tsc -p tsconfig.json && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@fastify/autoload": "5.7.1",
    "@fastify/cors": "8.4.0",
    "@fastify/mongodb": "8.0.0",
    "@fastify/sensible": "5.3.0",
    "@fastify/type-provider-typebox": "3.5.0",
    "@immobiliarelabs/fastify-sentry": "7.1.1",
    "@sentry/node": "7.74.1",
    "@sentry/profiling-node": "1.2.1",
    "@sinclair/typebox": "0.31.17",
    "fastify": "4.23.2",
    "fastify-cli": "5.8.0",
    "fastify-plugin": "4.5.1",
    "firebase-admin": "11.11.0",
    "gravatar": "1.8.2",
    "luxon": "3.4.3",
    "mercurius": "12.2.0",
    "mercurius-auth": "4.0.0",
    "mercurius-codegen": "5.0.3",
    "module-alias": "2.2.3",
    "mongoose": "7.6.1"
  },
  "devDependencies": {
    "@sentry/cli": "2.21.2",
    "@types/gravatar": "1.8.4",
    "@types/luxon": "3.3.2",
    "@types/node": "20.8.4",
    "@types/tap": "15.0.9",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "concurrently": "8.2.2",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.28.1",
    "fastify-tsconfig": "2.0.0",
    "prettier": "2.8.7",
    "tap": "18.4.6",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
